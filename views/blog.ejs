<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>homepage</title>
</head>
<body>
    <%- include('./partials/nav')  %>
    <div class="container mt-3">
        <h1><%= blog.title %> - <%= blog.createdBy.fullName %></h1>
        <img src="<%= blog.coverImageURL %>" width="600px" height="600px">
        <p><%= blog.body %></p>
    </div>

    <div class="container mt-3">
        <h1>comment (<%= comments.length %>) </h1>
       <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" name="content" aria-describedby="emailHelp" placeholder="enter your comment">
              </div>        
              <button type="submit" class="btn btn-primary">Submit</button>
        </form>   
       <% } %>
    </div>
    <div class="container mt-3" style="border: 1px solid black; margin-bottom: 10px;">
       <% comments.forEach(comment => { %>
        <div>
         <%= comment.createdBy.fullName %>:
         <pre><%= comment.content %></pre>
       <% }) %>
        </div>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>