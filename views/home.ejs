<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>homepage</title>
    <style>
        .container{
           display: flex;
           gap: 30px;
           flex-wrap: wrap;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container mt-3">
        <% blogs.forEach(blog => { %>
            <div class="grid">
            <div class="card" style="width: 18rem; height: 21rem;" >
                <img src="<%=blog.coverImageURL%>" class="card-img-top" alt="..." height="200px">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary" >Show blog</a>
                </div>
              </div>
            </div>
        <% }) %>
    </div>

     <%- include("./partials/scripts") %>
</body>
</html>